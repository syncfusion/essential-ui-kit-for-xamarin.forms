<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="EssentialUIKit.Views.Templates.NavigationTileTemplate"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Grid.Resources>

    <Grid
        BackgroundColor="{DynamicResource PlaceholderColor}"
        ColumnSpacing="0"
        RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Image of an item  -->
        <Image
            Aspect="AspectFill"
            BackgroundColor="{DynamicResource Gray-200}"
            HeightRequest="254">
            <Image.Source>
                <UriImageSource
                    CacheValidity="14"
                    CachingEnabled="true"
                    Uri="{Binding ItemImage}" />
            </Image.Source>
        </Image>
        <StackLayout
            Grid.Row="1"
            Padding="16"
            HorizontalOptions="FillAndExpand"
            Spacing="0"
            VerticalOptions="FillAndExpand">

            <!--  Name of an item  -->
            <Label
                FontFamily="{StaticResource Montserrat-SemiBold}"
                FontSize="16"
                LineHeight="{OnPlatform Android=1.5,
                                        Default=-1}"
                Text="{Binding ItemName}"
                TextColor="{DynamicResource Gray-900}" />

            <!--  Description about an item  -->
            <Label
                Margin="0,4,0,8"
                FontFamily="{StaticResource Montserrat-Medium}"
                FontSize="12"
                LineHeight="{OnPlatform Android=1.25,
                                        Default=-1}"
                Text="{Binding ItemDescription}"
                TextColor="{DynamicResource Gray-700}" />
            <StackLayout
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal"
                Spacing="0"
                VerticalOptions="EndAndExpand">

                <!--  Average rating from the overall rating  -->
                <Label
                    Margin="0,0,4,0"
                    Style="{StaticResource RatingLabelStyle}"
                    WidthRequest="16" />
                <Label
                    FontFamily="{StaticResource Montserrat-Regular}"
                    FontSize="12"
                    LineHeight="{OnPlatform Android=1.5,
                                            Default=-1}"
                    Text="{Binding ItemRating}"
                    TextColor="{DynamicResource Gray-700}"
                    VerticalOptions="Center">
                    <Label.Margin>
                        <OnPlatform
                            x:Type="Thickness"
                            Default="0,4,0,0"
                            UWP="0,6,0,0" />
                    </Label.Margin>

                </Label>

                <!--  Navigation icon  -->
                <Label
                    HorizontalOptions="EndAndExpand"
                    Style="{StaticResource RightArrowLabelStyle}" />
            </StackLayout>
        </StackLayout>
    </Grid>
</Grid>