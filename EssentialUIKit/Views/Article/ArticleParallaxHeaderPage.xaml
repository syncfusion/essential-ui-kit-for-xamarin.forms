<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EssentialUIKit.Views.Article.ArticleParallaxHeaderPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behavior="clr-namespace:EssentialUIKit.Behaviors"
    xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:controls="clr-namespace:EssentialUIKit.Controls"
    xmlns:converter="clr-namespace:EssentialUIKit.Converters"
    xmlns:listView="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    xmlns:template="clr-namespace:EssentialUIKit.Views.Templates"
    xmlns:viewModel="clr-namespace:EssentialUIKit.ViewModels.Article"
    x:Name="articleParallaxPage"
    BackgroundColor="{DynamicResource Gray-Bg}"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <converter:BooleanToStringConverter x:Key="boolToStringConverter" />
    </ContentPage.Resources>

    <ContentPage.ControlTemplate>
        <ControlTemplate>
            <StackLayout Spacing="0">
                <!--  Title View  -->
                <controls:TitleView Title="Brainstorm">
                    <controls:TitleView.LeadingView>
                        <buttons:SfButton
                            x:Name="backButton"
                            Command="{TemplateBinding BindingContext.BackButtonCommand}"
                            CommandParameter="{x:Reference backButton}"
                            Style="{StaticResource IconButtonStyle}"
                            Text="{StaticResource Back}" />
                    </controls:TitleView.LeadingView>
                    <controls:TitleView.TrailingView>
                        <StackLayout Orientation="Horizontal">
                            <!--  Favourite button  -->
                            <buttons:SfButton
                                x:Name="shareButton"
                                Command="{TemplateBinding BindingContext.ShareButtonCommand}"
                                CommandParameter="{x:Reference shareButton}"
                                Style="{StaticResource IconButtonStyle}"
                                Text="{StaticResource Share}" />

                            <!--  Bookmark button  -->
                            <buttons:SfButton
                                x:Name="bookmarkButton"
                                Command="{Binding Path=BindingContext.BookmarkCommand, Source={x:Reference articleParallaxPage}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource IconButtonStyle}"
                                Text="{Binding IsBookmarked, Converter={StaticResource boolToStringConverter}, ConverterParameter=0}" />

                            <StackLayout.BindingContext>
                                <viewModel:ArticleParallaxHeaderPageViewModel />
                            </StackLayout.BindingContext>

                        </StackLayout>
                    </controls:TitleView.TrailingView>
                </controls:TitleView>
                <ContentPresenter />
            </StackLayout>
        </ControlTemplate>
    </ContentPage.ControlTemplate>

    <ContentPage.Content>

        <Grid RowDefinitions="Auto, *" RowSpacing="0">
            <Grid Grid.Row="1">
                <!--  Parallx header view  -->
                <ScrollView>
                    <ContentView
                        x:Name="headerView"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                        <Grid RowDefinitions="Auto">
                            <!--  Article header image  -->
                            <Image
                                x:Name="headerImage"
                                Grid.Row="0"
                                Aspect="AspectFill"
                                BackgroundColor="{DynamicResource Gray-200}"
                                HeightRequest="265"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Start">
                                <Image.Source>
                                    <UriImageSource
                                        CacheValidity="14"
                                        CachingEnabled="true"
                                        Uri="{Binding ArticleParallaxHeaderImage}" />
                                </Image.Source>
                            </Image>
                        </Grid>
                    </ContentView>
                </ScrollView>

                <!--  OverLay Effect  -->
                <Frame
                    Grid.Row="0"
                    BackgroundColor="{DynamicResource Gray-Black}"
                    CornerRadius="0"
                    Opacity="0.2" />

                <!--  Custom control for parallax scroll view  -->
                <controls:ParallaxScrollView
                    HorizontalOptions="FillAndExpand"
                    ParallaxHeaderView="{x:Reference headerView}"
                    VerticalOptions="FillAndExpand">
                    <Grid
                        ColumnSpacing="0"
                        RowDefinitions="265, Auto, *"
                        RowSpacing="0"
                        VerticalOptions="FillAndExpand">

                        <StackLayout
                            Grid.Row="1"
                            Margin="16,-65,0,0"
                            Spacing="0">
                            <!--  Article Tile  -->
                            <Label
                                Margin="0,0,0,8"
                                FontFamily="Montserrat-Bold"
                                FontSize="20"
                                LineHeight="{OnPlatform Default=-1,
                                                        Android=1.25}"
                                Text="{Binding ArticleName}"
                                TextColor="{DynamicResource Gray-White}"
                                VerticalTextAlignment="End" />

                            <!--  Article author, title & average reading time  -->
                            <Label
                                FontSize="12"
                                LineHeight="{OnPlatform Default=-1,
                                                        Android=1.5}"
                                VerticalTextAlignment="End">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            FontFamily="Montserrat-Medium"
                                            Text="{Binding ArticleAuthor}"
                                            TextColor="{DynamicResource Gray-White}" />
                                        <Span Text="    " />
                                        <Span
                                            FontFamily="Montserrat-Regular"
                                            Text="{Binding ArticleDate}"
                                            TextColor="{DynamicResource Gray-White}" />
                                        <Span Text=" | " TextColor="{DynamicResource Gray-Bg}" />
                                        <Span
                                            FontFamily="Montserrat-Regular"
                                            Text="{Binding ArticleReadingTime}"
                                            TextColor="{DynamicResource Gray-White}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>

                        <StackLayout
                            Grid.Row="2"
                            BackgroundColor="{DynamicResource Gray-Bg}"
                            Spacing="0">
                            <!--  Subtitle of the blog  -->
                            <Label
                                Margin="16,16,0,8"
                                FontFamily="Montserrat-SemiBold"
                                FontSize="16"
                                LineHeight="{OnPlatform Default=-1,
                                                        Android=1.25}"
                                Text="{Binding SubTitle1}"
                                TextColor="{DynamicResource Gray-900}" />

                            <StackLayout
                                Margin="16,0,16,24"
                                BindableLayout.ItemsSource="{Binding ContentList}"
                                Spacing="16">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout Orientation="Horizontal">
                                            <Label
                                                Margin="{OnPlatform Default='0,3,0,0',
                                                                    iOS='0,10,0,0'}"
                                                FontFamily="FontIcons"
                                                FontSize="14"
                                                Text="&#xe720;"
                                                TextColor="{DynamicResource Gray-500}" />

                                            <Label
                                                FontFamily="Montserrat-Medium"
                                                FontSize="14"
                                                LineHeight="1.5"
                                                Text="{Binding Description}"
                                                TextColor="{DynamicResource Gray-700}" />
                                        </StackLayout>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>

                            <!--  Article content  -->
                            <Label
                                Margin="16,0,16,32"
                                FontFamily="Montserrat-Medium"
                                FontSize="14"
                                LineHeight="{OnPlatform Default=-1,
                                                        Android=1.5}"
                                Text="{Binding ArticleContent}"
                                TextColor="{DynamicResource Gray-700}" />

                            <!--  Related stroies label  -->
                            <Label
                                Margin="16,0,0,16"
                                FontFamily="Montserrat-SemiBold"
                                FontSize="12"
                                LineHeight="{OnPlatform Default=-1,
                                                        Android=1.25}"
                                Text="{Binding SubTitle2}"
                                TextColor="{DynamicResource Gray-800}" />

                            <!--  Related blog list  -->
                            <listView:SfListView
                                x:Name="SfListView"
                                Margin="8,0"
                                AutoFitMode="Height"
                                HorizontalOptions="FillAndExpand"
                                ItemSpacing="8"
                                ItemsSource="{Binding RelatedStories}"
                                SelectionBackgroundColor="Transparent"
                                TapCommand="{Binding ItemSelectedCommand}"
                                VerticalOptions="FillAndExpand">
                                <listView:SfListView.Behaviors>
                                    <behavior:SfListViewExtendHeightBehavior />
                                </listView:SfListView.Behaviors>

                                <listView:SfListView.ItemTemplate>
                                    <DataTemplate>
                                        <template:ArticleTileTemplate ParentBindingContext="{Binding Source={x:Reference articleParallaxPage}, Path=BindingContext}" />
                                    </DataTemplate>
                                </listView:SfListView.ItemTemplate>

                                <!--  Layout to customize no. of columns in SfListView  -->
                                <listView:SfListView.LayoutManager>
                                    <listView:GridLayout x:Name="GridLayout" SpanCount="{OnIdiom Phone=2, Tablet=3, Desktop=5}" />
                                </listView:SfListView.LayoutManager>

                            </listView:SfListView>

                            <StackLayout Margin="16,16,16,0" Orientation="Horizontal">
                                <Label
                                    HorizontalOptions="StartAndExpand"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="Reviews"
                                    VerticalOptions="Center" />

                                <!--  See all reviews Button  -->
                                <buttons:SfButton
                                    x:Name="ShowButton"
                                    Padding="0"
                                    Command="{Binding LoadMoreCommand}"
                                    CommandParameter="{x:Reference ShowButton}"
                                    FontSize="{OnIdiom Default=12,
                                                       Desktop=14}"
                                    HorizontalOptions="End"
                                    Style="{StaticResource TransparentButtonStyle}"
                                    Text="SHOW LESS"
                                    VerticalOptions="Center" />

                            </StackLayout>

                            <StackLayout
                                x:Name="StackLayout"
                                Margin="0,16,0,0"
                                BindableLayout.ItemsSource="{Binding Reviews}"
                                Spacing="0">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout Spacing="0">
                                            <BoxView HeightRequest="{OnIdiom Default=1, Desktop=0}" Style="{StaticResource HorizontalSeparatorStyle}" />

                                            <template:ReviewTemplate Padding="16,16,0,0" ColumnSpacing="0" />
                                        </StackLayout>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>

                            <!--  See all reviews Button  -->
                            <buttons:SfButton
                                Margin="50,8,50,24"
                                Command="{Binding AddNewCommentCommand}"
                                CommandParameter="{Binding .}"
                                Style="{StaticResource GradientButtonStyle}"
                                Text="COMMENT"
                                WidthRequest="245" />
                        </StackLayout>
                    </Grid>
                </controls:ParallaxScrollView>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>